<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/VerticalMinPad">

  <TextView
    android:id="@+id/list_rg_title"
    style="@style/ListMain"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/list_rg_type"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_toStartOf="@+id/list_rg_type" />

  <TextView
    android:id="@+id/list_rg_year"
    style="@style/ListAuxPad"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true" />

  <TextView
    android:id="@+id/list_rg_type"
    style="@style/ListAuxPad"
    android:layout_alignParentRight="true"
    android:layout_below="@id/list_rg_year"
      android:layout_alignParentEnd="true"
      android:textColor="@color/mb_orange_dark" />
</RelativeLayout>