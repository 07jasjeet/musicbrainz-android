<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_padding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/release_cover_art"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/cover_art_front"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/link_discog"/>

    <TextView
        android:id="@+id/release_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="@color/white"
        tools:text="Release Name" />

    <TextView
        android:id="@+id/release_disambiguation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textColor="@color/app_bg_light"
        tools:text="Disambiguation" />


</LinearLayout>

