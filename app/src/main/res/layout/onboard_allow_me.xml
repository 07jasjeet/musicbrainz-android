<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mascot_id"
        android:layout_width="352dp"
        android:layout_height="452dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="279dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/celebration_music" />

    <TextView
        android:layout_width="357dp"
        android:layout_height="202dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-316dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="89dp"
        android:layout_toRightOf="@id/mascot_id"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="@string/Onboarding_landing_page"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/lets_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/skip_btn"
        android:background="@color/app_bg"
        android:text="@string/lets_go"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/app_bg"
        android:text="@string/skip"
        android:textColor="@color/white" />

</RelativeLayout>