<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_bg_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:padding="16dp">

        <TextView
            android:id="@+id/documentName"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="/storage/music/tool/lateralus/the_patient.opus" />

        <TextView
            android:id="@+id/titleHeading"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/documentName"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleHeading"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="The Patient" />

        <TextView
            android:id="@+id/artistHeading"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:text="Artist"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/artistHeading"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="TOOL" />

        <TextView
            android:id="@+id/albumHeading"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artist"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="Album"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/albumHeading"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Lateralus" />


        <TextView
            android:id="@+id/trackHeading"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album"
            android:layout_marginStart="8dp"
            android:layout_marginTop="33dp"
            android:text="Track"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trackHeading"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="3" />

        <TextView
            android:id="@+id/discHeading"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/track"
            android:layout_marginStart="8dp"
            android:text="Disc"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discHeading"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            android:textSize="18sp"
            tools:text="1" />

        <TextView
            android:id="@+id/durationHeading"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disc"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="Duration"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/durationHeading"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="7:14" />


        <TextView
            android:id="@+id/yearHeading"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duration"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:text="Year"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yearHeading"
            android:layout_marginStart="12dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            tools:text="2001" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>