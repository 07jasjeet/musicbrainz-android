<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_gray">

    <include
        android:id="@+id/loadingAnimation"
        layout="@layout/loading"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/MBIDHeading"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MusicBrainz ID: "
                android:textColor="@color/colorPrimary"
                android:layout_margin="8dp"
                android:paddingTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/MBID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:paddingTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/MBIDHeading"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:text="2001" />

            <TextView
                android:id="@+id/AcoustIDHeading"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acoust ID: "
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MBID"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/AcoustID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/AcoustIDHeading"
                app:layout_constraintTop_toBottomOf="@id/MBID"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="2001" />

                <TextView
                    android:id="@+id/original_value"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="22dp"
                    android:padding="8dp"
                    android:text="Original Value"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/albumArtLocal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/AcoustID" />

                <ImageView
                    android:id="@+id/albumArtLocal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="26dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/titleHeading"
                    app:layout_constraintEnd_toEndOf="@+id/original_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/original_value" />

                <TextView
                    android:id="@+id/titleHeading"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Title"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/albumArtLocal" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/artistHeading"
                    app:layout_constraintStart_toStartOf="@+id/titleHeading"
                    app:layout_constraintTop_toBottomOf="@+id/titleHeading"
                    tools:text="The Patient" />

                <TextView
                    android:id="@+id/artistHeading"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Artist"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/artist"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title" />

                <EditText
                    android:id="@+id/artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/albumHeading"
                    app:layout_constraintStart_toStartOf="@+id/artistHeading"
                    app:layout_constraintTop_toBottomOf="@+id/artistHeading"
                    tools:text="TOOL" />

                <TextView
                    android:id="@+id/albumHeading"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Album"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/album"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/artist" />

                <EditText
                    android:id="@+id/album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/trackHeading"
                    app:layout_constraintStart_toStartOf="@+id/albumHeading"
                    app:layout_constraintTop_toBottomOf="@+id/albumHeading"
                    tools:text="Lateralus" />


                <TextView
                    android:id="@+id/trackHeading"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Track"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/track"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/album" />

                <EditText
                    android:id="@+id/track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_margin="6dp"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/discHeading"
                    app:layout_constraintEnd_toEndOf="@+id/discHeading"
                    app:layout_constraintTop_toBottomOf="@+id/trackHeading"
                    tools:text="3" />

                <TextView
                    android:id="@+id/discHeading"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Disc"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/disc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/track" />

                <EditText
                    android:id="@+id/disc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_margin="6dp"
                    android:layout_marginBottom="4dp"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/durationHeading"
                    app:layout_constraintEnd_toEndOf="@+id/discHeading"
                    app:layout_constraintTop_toBottomOf="@+id/discHeading"
                    tools:text="1" />

                <TextView
                    android:id="@+id/durationHeading"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Duration"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/disc" />

                <EditText
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/yearHeading"
                    app:layout_constraintEnd_toEndOf="@+id/disc"
                    app:layout_constraintStart_toEndOf="@+id/disc"
                    app:layout_constraintTop_toBottomOf="@+id/durationHeading"
                    tools:text="7:14" />


                <TextView
                    android:id="@+id/yearHeading"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Year"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/year"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/duration" />

                <EditText
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/yearHeading"
                    app:layout_constraintStart_toEndOf="@+id/yearHeading"
                    app:layout_constraintTop_toBottomOf="@+id/yearHeading"
                    tools:text="2001" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/AcoustID"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/new_value"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="22dp"
                    android:padding="8dp"
                    android:text="New Value"
                    android:textColor="@color/green"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/albumArtServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/albumArtServer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="27dp"
                    android:layout_marginBottom="26dp"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/titleHeadingServer"
                    app:layout_constraintEnd_toEndOf="@+id/titleServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/new_value" />

                <TextView
                    android:id="@+id/titleHeadingServer"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Title"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/titleServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/albumArtServer" />

                <EditText
                    android:id="@+id/titleServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Enter Title here"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/artistHeadingServer"
                    app:layout_constraintStart_toStartOf="@+id/titleHeadingServer"
                    app:layout_constraintTop_toBottomOf="@+id/titleHeadingServer"
                    tools:text="The Patient" />

                <TextView
                    android:id="@+id/artistHeadingServer"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Artist"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/artistServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleServer" />

                <EditText
                    android:id="@+id/artistServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Enter Artist Here"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/albumHeadingServer"
                    app:layout_constraintStart_toStartOf="@+id/artistHeadingServer"
                    app:layout_constraintTop_toBottomOf="@+id/artistHeadingServer"
                    tools:text="TOOL" />

                <TextView
                    android:id="@+id/albumHeadingServer"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Album"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/albumServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/artistServer" />

                <EditText
                    android:id="@+id/albumServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Enter Album Here"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/trackHeadingServer"
                    app:layout_constraintStart_toStartOf="@+id/albumHeadingServer"
                    app:layout_constraintTop_toBottomOf="@+id/albumHeadingServer"
                    tools:text="Lateralus" />


                <TextView
                    android:id="@+id/trackHeadingServer"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Track"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/trackServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/albumServer" />

                <EditText
                    android:id="@+id/trackServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:hint="Enter Track Here"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/discHeadingServer"
                    app:layout_constraintStart_toStartOf="@+id/trackHeadingServer"
                    app:layout_constraintTop_toBottomOf="@+id/trackHeadingServer"
                    tools:text="3" />

                <TextView
                    android:id="@+id/discHeadingServer"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Disc"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/discServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/trackServer" />

                <EditText
                    android:id="@+id/discServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Enter Disc Here"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/durationHeadingServer"
                    app:layout_constraintStart_toStartOf="@+id/discHeadingServer"
                    app:layout_constraintTop_toBottomOf="@+id/discHeadingServer"
                    tools:text="1" />

                <TextView
                    android:id="@+id/durationHeadingServer"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Duration"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/durationServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/discServer" />

                <EditText
                    android:id="@+id/durationServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Enter Duration"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/yearHeadingServer"
                    app:layout_constraintStart_toStartOf="@+id/durationHeadingServer"
                    app:layout_constraintTop_toBottomOf="@+id/durationHeadingServer"
                    tools:text="7:14" />


                <TextView
                    android:id="@+id/yearHeadingServer"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Year"
                    android:textColor="@color/light_blue"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/yearServer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/durationServer" />

                <EditText
                    android:id="@+id/yearServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:hint="Enter Year Here"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/yearHeadingServer"
                    app:layout_constraintTop_toBottomOf="@+id/yearHeadingServer"
                    tools:text="2001" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recording_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/overwrite_tags_button"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="@string/search_type_recording"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/dark_gray"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@id/picard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/picard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toStartOf="@id/overwrite_tags_button"
        app:layout_constraintStart_toEndOf="@id/recording_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:src="@drawable/ic_picard_logo_no_text"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/overwrite_tags_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="@string/tagger_file_save"
        android:textAllCaps="false"
        android:textColor="@color/app_bg_light2"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toEndOf="@id/picard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>