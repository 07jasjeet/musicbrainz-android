<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:background="@drawable/tag_background">

  <TextView
    android:id="@+id/tags"
    style="@style/TagsText"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/small_pad"
    android:layout_marginLeft="@dimen/small_pad"
    android:layout_toLeftOf="@+id/separator"
      android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/small_pad"
      android:layout_marginEnd="@dimen/small_pad"
      android:layout_toStartOf="@+id/separator" />

  <View
    android:id="@+id/separator"

    android:background="@color/main_bg"
    android:layout_width="2dp"
    android:layout_height="18dp"
    android:layout_centerVertical="true"
      android:layout_toStartOf="@+id/rating"
      android:layout_toLeftOf="@+id/rating" />

  <RatingBar
    android:id="@+id/rating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    style="?android:attr/ratingBarStyleSmall"
    android:layout_marginRight="@dimen/std_pad"
    android:layout_marginLeft="@dimen/std_pad"
    android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/std_pad"
      android:layout_marginEnd="@dimen/std_pad" />
</RelativeLayout>

