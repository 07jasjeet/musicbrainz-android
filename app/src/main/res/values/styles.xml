<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeForSettings" parent="Base.Theme.MaterialComponents">
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorAccent">@color/app_bg_light2</item>

    </style>
    <style name="Toolbar.ExpandedTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#263238</item>
    </style>
    <style name="Toolbar.CollapsedTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/app_bg</item>
    </style>
    <style name="AppThemeCustomActionBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="loginrequiredDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/loginrequiredDialogAnimation</item>
    </style>
    <style name="loginrequiredDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/alertdialog_popin</item>
    </style>
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

</resources>
